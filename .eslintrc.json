
{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "security"
    ],
    "env": {
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended",
        "airbnb-base",
        "plugin:security/recommended"
    ],
    "rules": {
        "indent": [
            "warn",
            4
        ],
        "import/extensions": "off",
        "import/no-unresolved": "off",
        "no-console": "off",
        "max-len": "off"
    }
}
